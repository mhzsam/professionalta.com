@model FirstZX.Core.DTO.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}




<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Register</h3>
                        <div style="text-align: center">

                        <strong style="color: green" >@TempData["refferalName"]</strong> is your referral member
                        <strong style="color: green" >@TempData["refferalEmail"]</strong> 
                        </div>
                        </div>
                            
                    <div class="card-body">
                        <div asp-validation-summary="All"></div>
                        <form asp-action="Register">
                            <input asp-for="IdentifireEmail" type="hidden" value="@TempData["refferalEmail"]"/>
                            <input asp-for="IdentifireName" type="hidden" value="@TempData["refferalName"]"/>
                            <div class="form-floating mb-3">


                            </div >

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        <input asp-for="FirstName" class="form-control" id="inputFirstName" type="text" placeholder="Enter your first name">
                                        <label asp-for="FirstName" for="inputFirstName">First name</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="LastName" class="form-control" id="inputLastName" type="text" placeholder="Enter your last name">
                                        <label asp-for="LastName" for="inputLastName">Last name</label>
                                    </div>
                                </div>
                            </div>


                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        <input asp-for="Country" class="form-control" id="inputFirstName" type="text" placeholder="Enter your first name">
                                        <label asp-for="Country" for="inputFirstName">Country</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="ValidId" class="form-control" id="inputLastName" type="text" placeholder="Enter your last name">
                                        <label asp-for="ValidId" for="inputLastName">ValidId</label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control" id="inputEmail" type="email" placeholder="name@example.com">
                                <label asp-for="Email" for="inputEmail">Email address</label>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        <input asp-for="Password" class="form-control" id="inputPassword" type="password" placeholder="Create a password">
                                        <label asp-for="Password" for="inputPassword">Password</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        <input asp-for="RePassword" class="form-control" id="inputPasswordConfirm" type="password" placeholder="Confirm password">
                                        <label asp-for="RePassword" for="inputPasswordConfirm">Confirm Password</label>
                                    </div>
                                </div>




                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn  btn-primary btn-block">Register</button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small"><a href="/login">Have an account? Go to login</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>