@model FirstZX.Core.DTO.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}


<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Reset Password</h3></div>
                    <div class="card-body">
                        <div asp-validation-summary="All"></div>
                        <form asp-action="ResetPasword">
                           <input asp-for="ActiveCode" type="hidden"/>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        <input asp-for="Password" class="form-control" id="inputPassword" type="password" placeholder="Create a password">
                                        <label asp-for="Password" for="inputPassword">Password</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        <input asp-for="RePassword" class="form-control" id="inputPasswordConfirm" type="password" placeholder="Confirm password">
                                        <label asp-for="RePassword" for="inputPasswordConfirm">Confirm Password</label>
                                    </div>
                                </div>




                            </div>
                            
                            <div class="d-grid">
                                <button type="submit" class="btn  btn-primary btn-block">ResetPassword</button>
                            </div>
                        </form>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</main>