@model FirstZX.Core.DTO.IdentifireEmailChechkViewModel
@{
    ViewData["Title"] = "CheckReferralForRegister";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Register </h3></div>
                    <div class="card-body">
                        <div asp-validation-summary="All"></div>
                        <form asp-action="CheckReferralForRegister" asp-controller="Account">
                            <div class="form-floating mb-3">
                                <input asp-for="IdentifireEmail" class="form-control" id="inputEmail" type="email" placeholder="name@example.com">
                                <label asp-for="IdentifireEmail" for="inputEmail">Referral Email</label>
                                <span asp-validation-for="IdentifireEmail" ></span>

                            </div>
                            
                            <div class="d-grid">
                                <button type="submit" class="btn  btn-primary btn-block">Next</button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small"><a href="/login">Have an account? Go to login</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
