@using FirstZX.Core.Services.Interface
@using FirstZX.Core.DTO
@inject IUserService _userService
@{
    SideBarUserPanelViewModel Model = _userService.getSideBarUserPanelViewModel(User.Identity.Name);
}
<div class="col-md-4 mb-3">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
                <img src="/UserAvatar/@Model.UserAvatar" alt="Admin" class="rounded-circle" width="150">
                <div class="mt-3">
                    <h3 class="m-0">@Model.LastName @Model.FirstName</h3>

                 
                    <p class="text-muted font-size-sm m-0 ">@Model.Email</p>
                    <p class="text-muted font-size-sm m-2">@Model.RegisterDate</p>
                    <p class="text-muted font-size-sm m-2">Your Rank is <strong>@Model.rank</strong></p>
                    @*<button class="btn btn-primary" >Follow</button>
                        <button class="btn btn-outline-primary">Message</button>*@
                    <div class="d-grid gap-2 ">
                        <a asp-area="UserPanel" asp-action="Index" asp-controller="UserPanel" class="btn btn-sm  btn-primary btn-block ">Information</a>

                        <a asp-area="UserPanel" asp-action="EditeProfile" asp-controller="UserPanel" class=" btn btn-sm  btn-primary btn-block">Edite Profile</a>

                        <a asp-action="Forgotpassword" asp-controller="Account" class="btn btn-sm  btn-primary btn-block">Reset Passwprd</a>

                        <a asp-action="BankForUser" asp-controller="UserPanel" class="btn btn-sm  btn-primary btn-block">My Month Bank</a>
                        <a asp-action="BankForUserWeek" asp-controller="UserPanel" class="btn btn-sm  btn-primary btn-block">My Week Bank</a>
                        <a asp-action="Forecast" asp-controller="UserPanel" class="btn btn-sm  btn-primary btn-block">Forecast</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>