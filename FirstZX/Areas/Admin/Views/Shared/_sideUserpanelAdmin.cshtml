@using FirstZX.Core.Services.Interface
@using FirstZX.Core.DTO
@inject IUserService _userService
@{
    SideBarUserPanelViewModel Model = _userService.getSideBarUserPanelViewModel(User.Identity.Name);
}
@inject IRequestStatus _requeststatus
@{
    int Model2 = _requeststatus.GetCountOfRequest();
}
<div class="col-md-4 mb-3">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
                <img src="/UserAvatar/@Model.UserAvatar" alt="Admin" class="rounded-circle" width="50">
                <div class="mt-3">
                    <h3>Wellcome Admin</h3>
                    <h5 class="m-0">@Model.LastName @Model.FirstName</h5>
                    <p class="text-muted font-size-sm m-0">@Model.Email</p>
                    <p class="text-muted font-size-sm m-0">@Model.RegisterDate</p>

                    <div class="d-grid gap-2">
                        <a asp-area="Admin" asp-action="Index" asp-controller="Admin" class="btn btn-sm  btn-primary btn-block">Information</a>
                        <a asp-area="Admin" asp-action="EditeUserAdmin" asp-controller="Admin" class="btn btn-sm  btn-primary btn-block">Edite User</a>
                        <a asp-area="Admin" asp-action="CreateUserForAdmin" asp-controller="Admin" class="btn btn-sm  btn-primary btn-block">Create User</a>
                        <a asp-area="Admin" asp-action="UserListForBankEdite" asp-controller="BankForAdmin" class="btn btn-sm  btn-primary btn-block">User Month Bank  Edite</a>
                        <a asp-area="Admin" asp-action="UserListForBankEditeWeek" asp-controller="BankForAdminWeek" class="btn btn-sm  btn-primary btn-block">User Week Bank  Edite</a>
                        <a asp-area="Admin" asp-action="ListOfUser" asp-controller="ForcastForAdmin" class="btn btn-sm  btn-primary btn-block">Forecast</a>
                        <a asp-area="Admin" asp-action="ListOfRequest" asp-controller="BankRequestForAdmin" type="button" class="btn btn-sm  btn-primary ">
                            Bank Request <span class="badge bg-secondary">@Model2</span>
                        </a>


                    </div>

                </div>
            </div>
        </div>
    </div>

</div>