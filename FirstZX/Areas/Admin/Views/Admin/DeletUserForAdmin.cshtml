@model FirstZX.Core.DTO.UserForAdminDeletViewModel;
@{ 
        ViewData["Title"] = "EditeUserAdmin";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header">
                        <h3 class="text-center font-weight-light my-4">Delete User</h3>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="All"></div>
                        <form asp-route="DeletUserAdmin" asp-area="Admin"
                              method="post">
                            <div >
                                <input asp-for="Email" type="hidden" />
                            </div>
                            <div>
                                <label asp-for="Email">@Model.Email</label>

                            </div>



                            <div class="d-grid">
                                <button type="submit" class="btn  btn-danger btn-block">Ism Sure Delet</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</main>



